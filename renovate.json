{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "extends": [
        "packages:linters",
        "packages:test"
      ],
      "matchPackageNames": [
        "axe-core",
        "lint-staged"
      ],
      "automerge": true
    },
    {
      "extends": [
        "group:jestMonorepo"
      ],
      "automerge": true
    },
    {
      "extends": [
        "group:commitlintMonorepo"
      ],
      "automerge": true
    },
    {
      "extends": [
        "group:babelMonorepo"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": ["core-js"],
      "extends": [":automergeMinor"]
    },
  ]
}

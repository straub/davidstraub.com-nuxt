{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "packageRules": [
    {
      "description": "Automerge linters and test tools",
      "extends": [
        "packages:linters",
        "packages:test"
      ],
      "matchPackageNames": [
        "lint-staged",
        "@vue/test-utils",
        "@nuxtjs/eslint-config"
      ],
      "automerge": true
    },
    {
      "description": "Automerge Vitest monorepo updates",
      "extends": [
        "monorepo:vitest"
      ],
      "automerge": true
    },
    {
      "description": "Automerge commitlint monorepo updates",
      "extends": [
        "monorepo:commitlint"
      ],
      "automerge": true
    },
    {
      "description": "Automerge Playwright monorepo updates",
      "extends": [
        "monorepo:playwright"
      ],
      "automerge": true
    },
    {
      "description": "Automerge GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "automerge": true
    },
    {
      "description": "Automerge patch and minor devDependencies updates",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    },
    {
      "description": "Automerge patch updates for production dependencies",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Automerge minor updates for normalize.css (stable CSS library)",
      "matchPackageNames": ["@csstools/normalize.css"],
      "matchUpdateTypes": ["minor"],
      "automerge": true
    }
  ],
  // Enable GitHub's native automerge feature. This lets GitHub automatically merge PRs
  // once all branch protection rules (required status checks, approvals, etc.) are met,
  // instead of requiring a second Renovate run to perform the merge. Not included in
  // config:best-practices, so must be set explicitly.
  "platformAutomerge": true
}
